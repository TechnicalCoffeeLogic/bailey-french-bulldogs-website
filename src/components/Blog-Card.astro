---
const { title, author, date, imageSrc, authorImageSrc, shortDesc, slug } =
    Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
    <a href={`/blog-post/${slug}`} class="mt-2 block">
        <div class="flex-shrink-0">
            <img class="h-48 w-full object-cover" src={imageSrc} alt="" />
        </div>
        <div class="flex flex-1 flex-col justify-between bg-white p-6 hover:bg-slate-200">
            <div class="flex-1">
                <p class="text-xl font-semibold text-gray-900">
                    {title}
                </p>
                <p class="mt-3 text-base text-gray-500">
                    {shortDesc}
                </p>
            </div>
            <div class="mt-6 flex items-center">
                <div class="flex-shrink-0">
                    <img
                        class="h-10 w-10 rounded-full"
                        src={authorImageSrc}
                        alt={author}
                    />
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900">{author}</p>
                    <div class="flex space-x-1 text-sm text-gray-500">
                        <time datetime="2020-03-16">{date}</time>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>

---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Bailey French Bulldogs">
    <Nav />
    <main>
        <div class="bg-white">
            <div class="mx-auto max-w-7xl py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
                <div class="text-center">
                    <p
                        class="mt-1 text-4xl font-bold tracking-tight text-bailey-50 sm:text-5xl lg:text-6xl"
                    >
                        The Bailey Family
                    </p>
                    <p class="mx-auto mt-5 max-w-xl text-lg text-gray-500">
                        Hello! We are the Baileys, we raise AKC registered
                        French Bulldogs. Our mamas and babies are raised in our
                        home as part of our family. They snuggle us on the
                        couch, join us for family walks, play outside with our
                        children, and eat like royalty. We want to be a blessing
                        to the world, and we have been blessed by Frenchies. We
                        have had Frenchies for 10+ years and love their
                        quirkiness and their big dog personalities. Who can
                        resist those bat ears?
                    </p>
                </div>
            </div>
        </div>

        <!--family -->

        <div class="bg-white">
            <div
                class="mx-auto max-w-7xl py-4 px-4 text-center sm:px-6 lg:px-8 lg:py-12"
            >
                <div class="space-y-12">
                    <ul
                        role="list"
                        class="mx-auto space-y-16 sm:grid sm:grid-cols-2 sm:gap-16 sm:space-y-0 lg:max-w-5xl lg:grid-cols-3"
                    >
                        <li>
                            <div class="space-y-6">
                                <img
                                    class="mx-auto h-40 w-40 rounded-full xl:h-56 xl:w-56"
                                    src="./daughter-web.jpg"
                                    alt=""
                                />
                                <div class="space-y-2">
                                    <div
                                        class="space-y-1 text-lg font-medium leading-6"
                                    >
                                        <!-- <h3 class="font-bold">Taylor S.</h3>
                                        <p class="text-bailey-50 font-light">
                                            test
                                        </p> -->
                                    </div>
                                </div>
                            </div>
                        </li>

                        <!-- More people... -->
                        <li>
                            <div class="space-y-6">
                                <img
                                    class="mx-auto h-40 w-40 rounded-full xl:h-56 xl:w-56"
                                    src="./zach-and-brittany-web.jpg"
                                    alt=""
                                />
                                <div class="space-y-2">
                                    <div
                                        class="space-y-1 text-lg font-medium leading-6"
                                    >
                                        <h3 class="font-bold">Zach and Brittany <br/> Bailey</h3>
                                        <!-- <p class="font-bold">
                                            Bailey
                                        </p> -->
                                    </div>
                                </div>
                            </div>
                        </li>

                        <!-- -->
                        <li>
                            <div class="space-y-6">
                                <img
                                    class="mx-auto h-40 w-40 rounded-full xl:h-56 xl:w-56"
                                    src="./sons-web.jpg"
                                    alt=""
                                />
                                <div class="space-y-2">
                                    <div
                                        class="space-y-1 text-lg font-medium leading-6"
                                    >
                                        <!-- <h3 class="font-bold">Heidi P.</h3>
                                        <p class="text-bailey-50 font-light">
                                            test
                                        </p> -->
                                    </div>
                                </div>
                            </div>
                        </li>

                        <!-- -->
                        <li>
                            <div class="space-y-6">
                                <img
                                    class="mx-auto h-40 w-40 rounded-full xl:h-56 xl:w-56"
                                    src="./ahsoka-web.jpg"
                                    alt=""
